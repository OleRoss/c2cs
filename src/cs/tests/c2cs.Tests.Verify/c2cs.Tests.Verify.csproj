<Project Sdk="Microsoft.NET.Sdk">

	<PropertyGroup>
		<TargetFramework>net9.0</TargetFramework>
		<ImplicitUsings>enable</ImplicitUsings>
		<Nullable>enable</Nullable>
		<IsPackable>false</IsPackable>

		<NoWarn>$(NoWarn);CA1707;CA2000;SA1300;IDE1006;CA1034;CA1051;CA1062;CA1724</NoWarn>
		<RootNamespace>C2CS.Tests.Verify</RootNamespace>
	</PropertyGroup>

	<ItemGroup>
		<PackageReference Include="coverlet.collector" Version="6.0.4"/>
		<PackageReference Include="Microsoft.NET.Test.Sdk" Version="17.13.0"/>
		<PackageReference Include="Verify.XunitV3" Version="29.2.0"/>
		<PackageReference Include="Xunit.DependencyInjection" Version="10.4.0"/>
		<PackageReference Include="Xunit.DependencyInjection.Logging" Version="10.0.0"/>
		<PackageReference Include="xunit.v3" Version="2.0.1"/>
		<PackageReference Include="xunit.runner.visualstudio" Version="3.0.2"/>
		<PackageReference Include="FluentAssertions" Version="7.0.0"/>
	</ItemGroup>

	<ItemGroup>
		<Using Include="Xunit"/>
	</ItemGroup>

	<!-- Project references -->
	<ItemGroup>
		<ProjectReference Include="..\..\production\c2cs.Tool\c2cs.Tool.csproj"/>
	</ItemGroup>

	<!-- Clang native library -->
	<ItemGroup>
		<None Include="$(GitRepositoryPath)\lib\*.*">
			<Link>%(Filename)%(Extension)</Link>
			<CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
		</None>
	</ItemGroup>

	<!-- Copy json config files to the output -->
	<ItemGroup>
		<None Update="**/*.json">
			<CopyToOutputDirectory>Always</CopyToOutputDirectory>
		</None>
	</ItemGroup>

	<!-- Snapshot files -->
	<ItemGroup>
		<Compile Remove="Snapshots\**\*.cs"/>
		<None Include="Snapshots\**\*.cs">
			<CopyToOutputDirectory>Never</CopyToOutputDirectory>
		</None>
	</ItemGroup>

</Project>
